<%= form_with(model: [:admin, @personal], local: true) do |form| %>
  <% if @personal.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@personal.errors.count, "error") %> prohibited this personal from being saved:</h2>
      <ul>
        <% @personal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :first_name, t('activerecord.attributes.personal.first_name') %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :last_name, t('activerecord.attributes.personal.last_name') %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :email, t('activerecord.attributes.personal.email') %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :phone, t('activerecord.attributes.personal.phone') %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :ci, t('activerecord.attributes.personal.ci') %>
      <%= form.text_field :ci, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :profession_id, t('activerecord.attributes.personal.profession') %>
      <%= form.collection_select :profession_id, @professions, :id, :name, { prompt: t('admin.personals.table.profession') }, { class: 'form-control select2' } %>
    </div>
  </div>
  <div class="card-footer">
    <%= form.submit t('common.save'), class: 'btn btn-primary' %>
    <%= link_to t('common.back'), admin_personals_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
