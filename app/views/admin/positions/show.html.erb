<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title"><%= t('admin.positions.details') %></h3>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3"><%= t('activerecord.attributes.position.code') %></dt>
      <dd class="col-sm-9"><%= @position.code %></dd>

      <dt class="col-sm-3"><%= t('activerecord.attributes.position.name') %></dt>
      <dd class="col-sm-9"><%= @position.name %></dd>

      <dt class="col-sm-3"><%= t('activerecord.attributes.position.status') %></dt>
      <dd class="col-sm-9"><span class="badge bg-<%= @position.active? ? 'success' : 'secondary' %>"><%= @position.status.humanize %></span></dd>
    </dl>
  </div>
  <div class="card-footer">
    <%= link_to t('common.edit'), edit_admin_position_path(@position), class: 'btn btn-warning' %>
    <%= link_to t('common.back'), admin_positions_path, class: 'btn btn-secondary' %>
  </div>
</div>
