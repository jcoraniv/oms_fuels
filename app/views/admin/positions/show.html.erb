<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title"><%= t('admin.positions.details') %></h3>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3"><%= t('activerecord.attributes.position.code') %></dt>
      <dd class="col-sm-9"><%= @org_position.position.code %></dd>

      <dt class="col-sm-3"><%= t('activerecord.attributes.position.name') %></dt>
      <dd class="col-sm-9"><%= @org_position.position.name %></dd>

      <dt class="col-sm-3">Department</dt>
      <dd class="col-sm-9"><%= @org_position.org_structure.department.name %></dd>

      <dt class="col-sm-3">Gestion</dt>
      <dd class="col-sm-9"><%= @org_position.gestion.name %></dd>

      <dt class="col-sm-3"><%= t('activerecord.attributes.position.status') %></dt>
      <dd class="col-sm-9"><span class="badge bg-<%= @org_position.position.active? ? 'success' : 'secondary' %>"><%= @org_position.position.status.humanize %></span></dd>
    </dl>

    <h5 class="mt-4">Assignments</h5>
    <% if @assignments.any? %>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Personal</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.personal.full_name %></td>
              <td><%= assignment.start_date %></td>
              <td><%= assignment.end_date || 'Ongoing' %></td>
              <td>
                <% if assignment.start_date <= Date.current && (assignment.end_date.nil? || assignment.end_date >= Date.current) %>
                  <span class="badge bg-success">Active</span>
                <% else %>
                  <span class="badge bg-secondary">Inactive</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No assignments yet.</p>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to t('common.edit'), edit_admin_position_path(@org_position), class: 'btn btn-warning' %>
    <%= link_to t('common.back'), admin_positions_path, class: 'btn btn-secondary' %>
  </div>
</div>
