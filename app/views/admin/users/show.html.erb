<div class="card">
  <div class="card-header">
    <h3 class="card-title">User Details</h3>
    <div class="card-tools">
      <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-warning" %>
      <%= link_to "Back", admin_users_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Email:</dt>
      <dd class="col-sm-9"><%= @user.email %></dd>

      <dt class="col-sm-3">Name:</dt>
      <dd class="col-sm-9"><%= @user.full_name %></dd>

      <dt class="col-sm-3">Role:</dt>
      <dd class="col-sm-9"><%= @user.role.name %></dd>

      <dt class="col-sm-3">Status:</dt>
      <dd class="col-sm-9">
        <% if @user.active? %>
          <span class="badge bg-success">Active</span>
        <% else %>
          <span class="badge bg-danger">Inactive</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">CI:</dt>
      <dd class="col-sm-9"><%= @user.personal.ci %></dd>

      <dt class="col-sm-3">Personal Email:</dt>
      <dd class="col-sm-9"><%= @user.personal.email || "N/A" %></dd>

      <dt class="col-sm-3">Phone:</dt>
      <dd class="col-sm-9"><%= @user.personal.phone || "N/A" %></dd>
    </dl>
  </div>
</div>
