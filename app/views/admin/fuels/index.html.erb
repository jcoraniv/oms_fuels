<h1><%= t('admin.fuels.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('admin.fuels.table.description') %></th>
      <th><%= t('admin.fuels.table.unit_of_measure') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fuels.each do |fuel|
 %>
      <tr>
        <td><%= fuel.description %></td>
        <td><%= t("activerecord.attributes.fuel.units_of_measure." + fuel.unit_of_measure) %></td>
        <td><%= link_to t('common.show'), admin_fuel_path(fuel) %></td>
        <td><%= link_to t('common.edit'), edit_admin_fuel_path(fuel) %></td>
        <td><%= link_to t('common.delete'), admin_fuel_path(fuel), method: :delete, data: { confirm: t('common.confirm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.fuels.new'), new_admin_fuel_path %>
