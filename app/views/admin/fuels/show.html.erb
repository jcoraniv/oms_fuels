<div class="card card-info">
  <div class="card-header">
    <h3 class="card-title"><%= t('admin.fuels.details') %></h3>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3"><%= t('admin.fuels.table.description') %></dt>
      <dd class="col-sm-9"><%= @fuel.description %></dd>

      <dt class="col-sm-3"><%= t('admin.fuels.table.unit_of_measure') %></dt>
      <dd class="col-sm-9"><%= t("activerecord.attributes.fuel.units_of_measure." + @fuel.unit_of_measure) %></dd>

      <dt class="col-sm-3"><%= t('admin.fuels.table.reference_price') %></dt>
      <dd class="col-sm-9"><%= number_to_currency(@fuel.reference_price) if @fuel.reference_price %></dd>
    </dl>
  </div>
  <div class="card-footer">
    <%= link_to t('common.edit'), edit_admin_fuel_path(@fuel), class: 'btn btn-warning' %>
    <%= link_to t('common.back'), admin_fuels_path, class: 'btn btn-secondary' %>
  </div>
</div>
