<h1><%= t('admin.vehicles.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('admin.vehicles.table.plate') %></th>
      <th><%= t('admin.vehicles.table.description') %></th>
      <th><%= t('admin.vehicles.table.details') %></th>
      <th><%= t('admin.vehicles.table.vehicle_type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle|
 %>
      <tr>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.description %></td>
        <td><%= vehicle.details %></td>
        <td><%= vehicle.vehicle_type.name %></td>
        <td><%= link_to 'Show', admin_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Edit', edit_admin_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', admin_vehicle_path(vehicle), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.vehicles.new'), new_admin_vehicle_path %>
